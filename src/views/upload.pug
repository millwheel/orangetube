extends base.pug

block content
    div.upload__container
        div.upload__video 
            video#preview
            button#actionBtn.social__btn Start recording
        if errorMessage
            span=errorMessage
        form(method="POST", enctype="multipart/form-data")
            div.video__update
                label(for="video") Video File 
                input(type="file", accept="video/*", required, id="video", name="video")
            div.thumb__update
                label(for="thumb") Thumbnail File 
                input(type="file", accept="image/*", required, id="thumb", name="thumb")
            input(name="title", placeholder="Title", required, type="text" maxlength = 20)
            input(name="description", placeholder="description", require, type="text", maxlength = 140)
            input(name="hashtags", placeholder="hashtags, seperated by comma.", require, type="text")
            input(type="submit", value="Upload Video")

block scripts 
    script(src="/assets/js/recorder.js")