extends base.pug

block content
    #videoContainer(data-id=video._id)
        video(src="/" + video.fileUrl)
        #videoControls.videoControls
            .videoControls__play 
                span#play.videoControls__playBtn 
                    i.fas.fa-play
            .videoControls__time
                span#currentTime 00:00
                span / 
                span#totalTime 00:00
            .videoControls__timeline
                input(type="range", step="1", value=0, min="0")#timeline
            .videoControls__volume
                span#mute 
                    i.fas.fa-volume-up
                input(type="range", step="0.1", value=0.5 min="0", max="1")#volume
            div 
                span#fullScreen
                    i.fas.fa-expand

    
    div
        p=video.description 
        small=video.createdAt
    div
        small Uploaded by 
            a(href=`/users/${video.owner._id}`)=video.owner.name
            br
        if loggedInUser && String(video.owner._id) === String(loggedInUser._id)
            a(href=`${video.id}/edit`) Edit Video &rarr;
            br
            a(href=`${video.id}/delete`) Delete Video &rarr;
    
    div.video__comments
        div.comment__tap
            span.video__commentitle Comments  
            if loggedInUser
            .video__add-comments  
                form.video__comment-form#commentForm
                    textarea(cols="50", rows="5", placeholder="Write a comment here")
                    button.comment__button Add Comment 
        ul 
            each comment in video.comments.reverse()
                li.video__comment(data-id=comment.id)
                    i.fas.fa-comment
                    span  #{comment.text}
                    if loggedInUser && String(comment.owner._id) === String(loggedInUser._id)
                        span.delete__comment#deleteBtn &#x274C
    
block scripts 
    script(src="/assets/js/videoPlayer.js")
    if loggedIn
        script(src="/assets/js/commentSection.js")

